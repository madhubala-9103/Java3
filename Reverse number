import java.util.Scanner;

class ReverseNumber {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter a number: ");
        int n = sc.nextInt();

        int a = 0;

        while (n!= 0) {
            int b = n% 10;
            a = a * 10 + b;
            n = n / 10;
        }

        System.out.println("Reversed number: " + a);
    }
}
