import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
     Scanner scan=new Scanner(System.in);
        int i,n;
        n=scan.nextInt();
        int sum=0;
        for(i=1;i<=n;i++)
        { 
            sum += i;
        }
        
            System.out.print(sum);
        }
 }
